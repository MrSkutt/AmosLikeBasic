<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AmosLikeBasic.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />

        <!-- AMOS-ish palette + chunky controls -->
        <Style Selector="Window">
            <Setter Property="Background" Value="#0B2A9B"/>
        </Style>

        <Style Selector="Border.amos-panel">
            <Setter Property="Background" Value="#06206F"/>
            <Setter Property="BorderBrush" Value="#7FB2FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>

        <Style Selector="TextBox.amos-editor">
            <Setter Property="FontFamily" Value="Courier New, Monospace"/>
            <Setter Property="Background" Value="#00134D"/>
            <Setter Property="Foreground" Value="#7FB2FF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style Selector="TextBox.amos-console">
            <Setter Property="FontFamily" Value="Courier New, Monospace"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <!-- Tvinga bort scrollbarer helt -->
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <Style Selector="Button.amos-button">
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#7FB2FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="Menu">
            <Setter Property="Background" Value="#08237F"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="TextBlock.amos-title">
            <Setter Property="Foreground" Value="#FFD400"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Application.Styles>
</Application>