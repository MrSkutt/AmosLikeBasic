<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:amosLikeBasic="clr-namespace:AmosLikeBasic"
        x:Class="AmosLikeBasic.ScreenWindow"
        Title="AMOS Screen"
        Width="1280" Height="960"
        Background="Black"
        WindowStartupLocation="CenterOwner">
    <Grid Background="Black" ClipToBounds="True">
        <Viewbox Stretch="Uniform">
            <Grid Width="640" Height="480" Background="Black">
                <amosLikeBasic:AmosGpuView Name="ScreenControl" 
                                           Width="640" 
                                           Height="480" />
                
                <TextBox Name="Console" 
                         Classes="amos-console" 
                         Background="Transparent" 
                         Foreground="White"
                         IsHitTestVisible="False"
                         IsReadOnly="True"
                         Focusable="False"
                         BorderThickness="0"
                         Margin="0"
                         Padding="0"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>